{
  "extends": "../../tsconfig_common.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build/",
    "rootDir": "./",
    "declaration": true,
    "declarationDir": "./build/",       
  },
  "include": [ "src", "types" ], 
  /* omitting the tests from the main compile to avoid them generating d.ts files.
    The Jest run knows to include tests. */
  "exclude": [ "tests", "./*.js", "./*.mjs", "coverage", "docs", "build"]
}