{
  "extends": "../../tsconfig_common.json",
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./build",
    "rootDir": "./",
    "declarationDir": "./build/types",    
    "paths": {
      "@plblum/jivs-engine": ["../jivs-engine"]
    }    
  },
  "include": [ "src", "types" ], 
